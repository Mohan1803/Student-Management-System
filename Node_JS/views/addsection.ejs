<div class="container pt-5 my-5 bg-white">
    <div class="row align-items-center">
      <div class="col-md-10 offset-md-1">
        <% if(locals.success.length>0) { %>
          <div class="w-75 p-3 container d-flex align-items-center justify-content-center alert alert-success alert-dismissible fade show"
              role="alert">
              <%= success %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% } %>

        <% if(locals.error.length>0) { %>
          <div
            class=" w-75 p-3 container d-flex align-items-center justify-content-center alert alert-danger alert-dismissible fade show"
            role="alert">
            <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% } %>

    <center>
    <form name="myForm" action="/staff/addsection" method="POST">

      <h2 class="text-center" style="font-family: 'Times New Roman', Times, serif;">Add Section</h2>

      


       

      <div class="mb-3">
        <div class="form-floating w-50 p-2">
          <select class="form-select" aria-label="Default select example" id="class" name="class">
            <% if (locals.result) { %>
                <% for ( let i=0; i < locals.result.length; i++){ %>
                    <option value="<%= locals.result[i].ID %>"><%= locals.result[i].Class %></option>
                
           <% } }  %>
          </select>
          <label for="class">Class</label>
        </div>
      </div>


          <div class="mb-3">
            <div class="form-floating  w-50 p-2">
              <input type="text" class="form-control" name="section" id="section" placeholder="Section">
              <label for="section">Section</label>
            </div>
          </div>
          
          <div class="mb-3">
            <div class="form-floating  w-50 p-2">
              <input type="text" class="form-control" name="capacity" id="capacity" placeholder="Capacity">
              <label for="capacity">Capacity</label>
            </div>
          </div>

       
  
        <div class="mb-3 align-center">
          <div class="form-floating">
            <input type="submit" class="btn btn-primary align-center" value="submit" />
          </div>
        </div>
        <a href="/staff/staffinfo" class="btn btn-outline-primary btn-sm" role="button">Back To Your Profile</a>


      </center>

    <br>
    <table class="table table-light text-center">
        <thead>
          <tr>
          <th scope="col">S.No</th>
          <th scope="col">Class</th>
          <th scope="col">SECTION</th>
          <th scope="col">CAPACITY</th>
        </tr>
        </thead>
        <tbody>
            <% if(result) {        
                for(var i = 0; i < result.length; i++) { %>
                  <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= result[i].Class %></td>
                    <td><%= result[i].section %></td>
                    <td><%= result[i].capacity %></td>
                  </tr>
            <%  }  
              } else { %>
                      <tr>
                        <td colspan="12" class="text-center">No Records Found.</td>
                       </tr>
                <% } %>
            </tbody>
          </table>

</div>
</div>
</div>