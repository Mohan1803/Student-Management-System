<% if(locals.success.length>0) { %>
    <div class="w-75 p-3 container d-flex align-items-center justify-content-center alert alert-success alert-dismissible fade show"
        role="alert">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

  <% if(locals.error.length>0) { %>
    <div
      class=" w-75 p-3 container d-flex align-items-center justify-content-center alert alert-danger alert-dismissible fade show"
      role="alert">
      <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>


      <center>

        <form name="myForm" action="/student/result" method="POST">

          <b>
            <h1 style="font-family: 'Times New Roman', Times, serif;">Your Result</h1>
          </b><br>

          <table class="table table-light text-center" id="student-result">
            <thead>
              <tr>
              <th scope="col">S.No</th>
              <th scope="col">EXAM NAME</th>
              <th scope="col">SUBJECT</th>
              <th scope="col">MARK SCORED</th>
              <th scope="col">OUT OF</th>
              <th scope="col">RESULT</th>
            </tr>
            </thead>
            <tbody>
                <% if(studentresult.length !=0) {        
                    for(var i = 0; i < studentresult.length; i++) { %>
                      <tr>
                        <th scope="row"><%= (i+1) %>.</th>
                        <td><%= studentresult[i].exam_name %></td>
                        <td><%= studentresult[i].subject_name %></td>
                        <td><%= studentresult[i].marks_scored %></td>
                        <td><%= studentresult[i].actual_mark %></td>
                        <td><%= studentresult[i].result %></td>
                      </tr>
                <%  }  
                  } else { %>
                          <tr>
                            <td colspan="12" class="text-center">No Records Found.</td>
                           </tr>
                    <% } %>
                </tbody>
              </table>
       
              <a href="/student/student-profile" class="btn btn-outline-primary btn-sm" role="button">Back To Your Profile</a>
        </form>
      </center>
      


